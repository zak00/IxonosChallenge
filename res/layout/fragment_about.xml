<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".AboutFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:id="@+id/textViewAbout"
        android:textColor="@color/colorLightBlue"
        android:textSize="@dimen/textSizeTitle"
        android:layout_marginBottom="@dimen/marginEditText"
        android:layout_marginTop="@dimen/topPaddingFragmentTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appVersion"
        android:id="@+id/textViewAppVersion"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeAbout"
        android:layout_marginBottom="@dimen/marginEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewAbout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:id="@+id/textViewAuthor"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSizeAbout"
        android:layout_marginBottom="@dimen/marginEditText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewAppVersion"/>

</RelativeLayout>